<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.RecipeDetail"
             xmlns:viewmodels="clr-namespace:MauiApp1.Viewmodels"
             xmlns:models="clr-namespace:MauiApp1.Models"
             x:DataType="viewmodels:RecipeDetailViewmodel"
             Title="RecipeDetail">
    <VerticalStackLayout>
        <Image Source="{Binding Recipe.strImageSource}" HeightRequest="160" />
        <Label FontSize="Large" Text="{Binding Recipe.strMeal}"/>
        <Label FontSize="Small" Text="{Binding Recipe.strInstructions}"/>
        
    </VerticalStackLayout>
</ContentPage>